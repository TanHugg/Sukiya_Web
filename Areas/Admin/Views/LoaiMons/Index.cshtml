@model IEnumerable<Sukiya.Models.LoaiMon>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Các loại món</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoaiMon)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiMon)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaLoaiMon }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaLoaiMon }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaLoaiMon })
            </td>
        </tr>
    }

</table>


